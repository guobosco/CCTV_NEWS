/* app.wxss */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 日期选择器样式 */
.date-picker-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

/* 日期导航按钮样式 */
.date-nav-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
}

.date-nav-buttons button {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  padding: 15rpx 0;
  border: none;
  border-radius: 50rpx;
  background-color: #a62f20;
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(166, 47, 32, 0.3);
}

.prev-btn, .next-btn {
  background-color: #a62f20;
  color: white;
}

.date-nav-buttons button:active {
  background-color: #8c2517;
  transform: scale(0.98);
}

.date-nav-buttons button:disabled {
  background-color: #ffcccc;
  color: #a62f20;
  box-shadow: none;
  opacity: 0.6;
}

.picker {
  padding: 20rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx 0;
  color: #333;
}

/* 新闻列表样式 */
.news-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.news-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.news-date {
  font-size: 24rpx;
  color: #999;
}

.news-content {
  font-size: 28rpx;
  line-height: 44rpx;
  margin-top: 20rpx;
  color: #666;
}

.content {
  font-size: 28rpx;
  line-height: 44rpx;
  margin-top: 20rpx;
  color: #666;
  text-indent: 56rpx; /* 2个字符缩进 */
  text-align: justify;
}

/* 结构化新闻内容样式 */
.news-structured {
  margin-top: 30rpx;
}

.news-intro {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

.news-items {
  margin-top: 20rpx;
}

.news-item {
  display: flex;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-number {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  background-color: #1aad19;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.item-title {
  flex: 1;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #333;
  text-align: justify;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 单条新闻详情样式 */
.item-detail {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.item-detail-content {
  font-size: 30rpx;
  line-height: 48rpx;
  color: #333;
  text-align: justify;
}

